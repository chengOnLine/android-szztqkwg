<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tip_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColor="@color/grey_black"
        android:visibility="gone"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/tip_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/grey_black"
        android:gravity="center"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/DivQiantui"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txtQiantui"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="请输入备注"
            android:inputType="textMultiLine"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/tv_btn_selector"
            android:gravity="center"
            android:textColor="@color/grey_black"
            android:text="取消"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/grey_black" />

        <TextView
            android:id="@+id/button_sure"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/tv_btn_selector"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="确定"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
